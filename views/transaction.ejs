    <h1 style="text-align:center">Transaction from..</h1>

    <div style="text-align:center">
        <img src="./images/usericon.png">
    </div>

    <h3 style="text-align:center"><%= currentUser.name %></h3>
    <p style="text-align:center">User ID: <%= currentUser.userID %>'s</p>

        <div style="text-align:center">
            <form action="/transaction" method="post" style="text-align:center">
                <h3 style="text-align:center">Wallet ID of Sender </h3>
                <input type="text" name="senderWalletID" id="senderWalletID" placeholder="Enter your wallet ID">
                
                <h3 style="text-align:center">UserID of Receiver </h3>
                <input type="text" name="receiverUserID" id="receiverUserID" placeholder="Enter userID of receiver">

                <h3 style="text-align:center">Wallet ID of Receiver </h3>
                <input type="text" name="receiverWalletID" id="receiverWalletID" placeholder="Enter receiver wallet ID">

                <h3 style="text-align:center">Transaction Amount</h3>
                <input type="text" name="amount" id="amount" placeholder="Enter transaction amount">
                
                <button type="submit">Transfer Money</button>
            </form>
        </div><br>

